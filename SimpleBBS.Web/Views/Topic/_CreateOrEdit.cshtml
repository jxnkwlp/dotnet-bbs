@{
    var tagsSelectList = Model.AllTags.Select(t => new SelectListItem(t.Name, t.Id.ToString()));
}

@model TopicCreateOrUpdateViewModel

<div class="row clearfix">
    <div class="col-md-9">

        <div class="panel panel-default">

            <div class="panel-heading">发布话题</div>
            <div class="panel-body">

                <div asp-validation-summary="ModelOnly"></div>


                <form method="post" class="topic-create">

                    <div class="form-group">
                        <label for="exampleInputEmail1">选择版块</label>

                        <select class="form-control topic-tags" asp-for="TagsId" asp-items="tagsSelectList"></select>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputEmail1">标题</label>
                        <input class="form-control" asp-for="Title" placeholder="标题" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group" id="ContentBody"> 
                        <textarea class="form-control" asp-for="Content"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <button class="btn btn-primary">发布</button>
                    </div>

                </form>

            </div>
        </div>

    </div>

    <div class="col-md-3">
        <partial name="_WidgetPartial" />
    </div>
</div>
 